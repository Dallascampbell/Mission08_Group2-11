@*
*@
@{
    ViewData["Title"] = "Add a Task";
}

@model Mission08_Group2_11.Models.SubmitTask; 

<br />
<h1 class="display-4">Add a Task Here</h1>
<!--Create form for users to add their tasks-->
<div>
    <form method="post">
        <fieldset style="width:400px; border: solid 5px midnightblue; background-color: lightskyblue; text-align:center; margin: auto;">
            <br />
            <label asp-for="Task">Task:</label>
            <input asp-for="Task" />
            <br />

            <label asp-for="DueDate">Due Date:</label>
            <input type="date" asp-for="DueDate" />
            <br />

            <label asp-for="Quadrant">Quadrant:</label>
            <input asp-for="Quadrant" />
            <br />

            <label asp-for="Category">Category:</label>
            <select asp-for="Category">
                <option value="">Select</option>
                <option value="Home">Home</option>
                <option value="School">School</option>
                <option value="Work">Work</option>
                <option value="Church">Church</option>
            </select>

            <br />

            <label asp-for="Completed">Completed:</label>
            <select asp-for="Completed">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />

            <button type="submit">Submit Task</button>
            <br />
            <br />
        </fieldset>
    </form>
</div>